{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenInfra Specification",
  "type": "object",
  "properties": {
    "openinfra": {
      "type": "string",
      "description": "Version of the OpenInfra specification."
    },
    "info": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "version": { "type": "string" },
        "contact": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "email": { "type": "string" }
          }
        },
        "license": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "url": { "type": "string" }
          }
        }
      },
      "required": ["title", "version"]
    },
    "resources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "name": { "type": "string" },
          "properties": { "type": "object" },
          "actions": { "type": "array" }
        },
        "required": ["type", "name"]
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "resource": { "type": "string" },
          "depends_on": { "type": "array" }
        },
        "required": ["resource", "depends_on"]
      }
    }
  },
  "required": ["openinfra", "info", "resources"]
}
